%h2.bordered
  = @bio.label

.row-fluid
  .span9.well
    = @bio.content
  .span3.pull-right
    - if @bio.photo.present?
      = image_tag @bio.photo, :style => 'width: 90%; margin-left: 1em;', :class => 'framed'

%br.clear

= link_to edit_speaker_bio_path(current_user.slug, @bio), :class => 'btn btn-danger' do
  %i.icon-edit
  Edit

= link_to speaker_bios_path(current_user.slug), :class => 'btn btn-danger' do
  Back

.pull-right
  = link_to speaker_bio_path(current_user.slug, @bio), :method => :delete, :class => 'btn btn-danger', :confirm => 'Are you sure?' do
    %i.icon-trash
    Delete
