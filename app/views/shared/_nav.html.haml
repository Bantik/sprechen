= nav_bar(:fixed => :top, :responsive => true, :brand => branding.html_safe) do
  = menu_group :pull => :right do
    - if current_user
      = menu_item "Bios", speaker_bios_path(current_user)
      = menu_item "Talks", speaker_talks_path(current_user)
      = menu_item "Conferences", speaker_calendar_path(current_user)
      = menu_item "Proposals", "#"
      = menu_item "Sign Out", sign_out_path
      %li
        = image_tag current_user.avatar_url, :class => 'avatar'
